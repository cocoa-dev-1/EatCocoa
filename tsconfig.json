{
  "compilerOptions": {
    "module": "CommonJS", // required
    "target": "ES2015", // required
    "noImplicitAny": true,
    "strict": false,
    "outDir": "build",
    "esModuleInterop": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"],
}