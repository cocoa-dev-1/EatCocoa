{
  "compilerOptions": {
    "module": "CommonJS", // required
    "target": "ES2015", // required
    "noImplicitAny": false,
    "strict": false,
    "outDir": "build",
    "esModuleInterop": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
